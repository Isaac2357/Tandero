<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp">

    <TextView
        android:id="@+id/item_tanda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:background="@color/item_tanda_tv_background"
        android:textColor="@color/backgroundWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_tanda_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_tanda"
        app:layout_constraintBottom_toBottomOf="@id/item_tanda"
        app:layout_constraintRight_toRightOf="@id/item_tanda"
        android:background="@drawable/ic_delete"
        android:layout_marginEnd="20dp"
        android:paddingTop="35dp"
        android:paddingEnd="35dp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/item_tanda_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_tanda"
        app:layout_constraintBottom_toBottomOf="@id/item_tanda"
        app:layout_constraintRight_toLeftOf="@id/item_tanda_delete_button"
        android:background="@drawable/ic_edit"
        android:layout_marginEnd="20dp"
        android:paddingTop="35dp"
        android:paddingEnd="35dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>