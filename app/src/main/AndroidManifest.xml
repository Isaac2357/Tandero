<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iteso.tanderomobile">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.ActivitySplash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.cuenta.ActivitySendEmail"
            android:screenOrientation="portrait"> </activity>

        <activity
            android:name=".activities.cuenta.ActivityProfile"
            android:screenOrientation="portrait"></activity>

       <activity
            android:name=".activities.base.ActivityBase"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/title_activity_base" />
       
        <activity
            android:name=".activities.enrollment.ActivityEnroll"
            android:screenOrientation="portrait"/>
       
        <activity
            android:name=".activities.login.ActivityLogin"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"/>
    </application>

</manifest>